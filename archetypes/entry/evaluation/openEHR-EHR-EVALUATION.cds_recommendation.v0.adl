archetype (adl_version=1.4)
	openEHR-EHR-EVALUATION.cds_recommendation.v0

concept
	[at0000]	-- CDS Recommendation
language
	original_language = <[ISO_639-1::en]>
description
	original_author = <
		["name"] = <"Bjørn Næss">
		["email"] = <"bna@dips.no">
		["organisation"] = <"DIPS ASA">
		["date"] = <"2015-11-13">
	>
	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"A data structure to collect data as outcome fra a decision/guideline rule execution. ">
			use = <"Use to collect data from a rule execution by a CDS runtime. I.e. the result from a GDL execution. ">
			keywords = <"cds", ...>
			misuse = <"Not to be used to record recommendation from human beings">
			copyright = <"">
		>
	>
	lifecycle_state = <"NotSet">
	other_contributors = <"Tomas N. Alme", ...>
	other_details = <
		["MD5-CAM-1.0.1"] = <"1869E9A4C8AB87589ECE46830A37B4C0">
	>

definition
	EVALUATION[at0000] matches {	-- CDS Recommendation
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Summary
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Strength
						value matches {
							0|[local::at0004], 	-- Not significant
							1|[local::at0005], 	-- Minor significance
							2|[local::at0006], 	-- Significant
							3|[local::at0007], 	-- Very significant
							4|[local::at0008], 	-- Important
							5|[local::at0009]  	-- Critical
						}
					}
					CLUSTER[at0010] occurrences matches {0..*} matches {	-- Guidelines
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0012] occurrences matches {0..1} matches {	-- Abstract
								value matches {
									DV_TEXT matches {*}
								}
							}
							ELEMENT[at0011] occurrences matches {0..*} matches {	-- URL to guideline
								value matches {
									DV_URI matches {*}
								}
							}
						}
					}
				}
			}
		}
	}

