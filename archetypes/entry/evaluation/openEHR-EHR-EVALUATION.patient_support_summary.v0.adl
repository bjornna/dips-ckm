definition
	EVALUATION[at0000] matches {	-- Pasientstøtte sammendrag
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Støtteområde
						value matches {
							DV_TEXT matches {*}
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011, 	-- Forflytning
									at0012, 	-- Språk
									at0013, 	-- Orientering
									at0014, 	-- Ernæring
									at0015]	-- Allergier
								}
							}
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Støttebehov
						value matches {
							0|[local::at0004], 	-- Ingen hjelp
							1|[local::at0005], 	-- Litt hjelp
							2|[local::at0006], 	-- Moderat hjelp
							4|[local::at0007], 	-- Betydelig hjelp
							5|[local::at0008]  	-- Må ha assistanse
						}
					}
					ELEMENT[at0009] occurrences matches {0..1} matches {	-- Beskrivelse
						value matches {
							DV_TEXT matches {*}
						}
					}
					allow_archetype CLUSTER[at0010] occurrences matches {0..*} matches {	-- Detaljerte opplysninger
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

