								}
							}
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {	-- *Formula(en)
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0012, 	-- *Dubois and Dubois(en)
